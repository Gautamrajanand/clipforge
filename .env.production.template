################################################################################
# ClipForge Production Environment Configuration
# CRITICAL: Fill in all values before deploying to production
################################################################################

################################################################################
# DATABASE (Supabase)
################################################################################
# Get from: https://supabase.com/dashboard/project/_/settings/database
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxx:xxxxx@aws-0-us-east-1.pooler.supabase.com:6543/postgres

################################################################################
# REDIS (Upstash)
################################################################################
# Get from: https://console.upstash.com/redis
# Format: redis://default:[password]@[endpoint]:6379
REDIS_URL=redis://default:xxxxx@xxxxx.upstash.io:6379

################################################################################
# STORAGE (Cloudflare R2)
################################################################################
# Get from: https://dash.cloudflare.com/[account]/r2/overview/api-tokens
# R2 is S3-compatible, use S3 endpoint format
S3_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=clipforge-production
S3_ACCESS_KEY_ID=xxxxx
S3_SECRET_ACCESS_KEY=xxxxx

# CDN URL for serving media (Cloudflare R2 public URL)
# Example: https://cdn.clipforge.ai or https://pub-xxxxx.r2.dev
CDN_URL=https://cdn.clipforge.ai

################################################################################
# BILLING (Stripe LIVE MODE)
################################################################################
# CRITICAL: Switch to LIVE keys before accepting real payments
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx

# Stripe Price IDs (LIVE mode)
# Get from: https://dashboard.stripe.com/products
STRIPE_PRICE_STARTER=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_BUSINESS=price_xxxxx

# Stripe Webhook Secret (LIVE mode)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

################################################################################
# AUTHENTICATION (Clerk)
################################################################################
# Production instance keys
# Get from: https://dashboard.clerk.com/apps/[app-id]/instances/[instance-id]/api-keys
CLERK_SECRET_KEY=sk_live_xxxxx
CLERK_PUBLISHABLE_KEY=pk_live_xxxxx

################################################################################
# API & SECURITY
################################################################################
# Generate with: openssl rand -base64 32
API_JWT_SECRET=xxxxx-production-secret-xxxxx
API_JWT_EXPIRY=24h

# Webhook secret for external integrations
WEBHOOK_SECRET=xxxxx-webhook-secret-xxxxx

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=production

################################################################################
# ML WORKERS
################################################################################
ML_WORKER_PORT=8000
ML_WORKER_HOST=0.0.0.0

# ASR provider: "assemblyai" (recommended for production)
ASR_PROVIDER=assemblyai
ASSEMBLYAI_API_KEY=xxxxx

# OpenAI for AI-generated titles/descriptions
OPENAI_API_KEY=sk-proj-xxxxx

################################################################################
# FRONTEND (Production URLs)
################################################################################
# Production API URL
NEXT_PUBLIC_API_URL=https://api.clipforge.ai

# Production app URL
NEXT_PUBLIC_APP_URL=https://app.clipforge.ai

################################################################################
# OBSERVABILITY & MONITORING
################################################################################
