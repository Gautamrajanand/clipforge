// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
  // Connection pooling for scalability
  // Prevents database connection exhaustion
  relationMode = "prisma"
}

// ============ Users & Orgs ============

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String?  // hashed (optional for Clerk users)
  clerkId   String?  @unique // Clerk user ID
  isAdmin   Boolean  @default(false) // Admin role for platform management
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
  apiKeys     ApiKey[]
  webhooks    Webhook[]
  npsResponses NPSResponse[]
  feedback     Feedback[]
  onboardingProgress OnboardingProgress?

  @@index([email])
  @@index([clerkId])
  @@index([isAdmin])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  tier      Tier     @default(FREE) // Subscription tier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Credit system (Opus Clip parity)
  credits           Int      @default(60) // Free: 60, Starter: 150, Pro: 300
  creditsResetDate  DateTime @default(now()) // Monthly reset date
  creditsUsedThisMonth Int   @default(0) // Track usage for analytics
  
  // Stripe subscription
  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripePriceId          String? // Current plan price ID
  stripeCurrentPeriodEnd DateTime?
  
  // Trial system
  trialStartDate  DateTime?
  trialEndDate    DateTime?
  trialUsed       Boolean  @default(false)

  // Referral system (PLG growth)
  referralCode            String?  @unique @db.VarChar(10) // Unique code for this org
  referredBy              String?  @db.VarChar(50) // Code of referrer
  referralRewardClaimed   Boolean  @default(false) // Whether signup bonus claimed

  // Onboarding system (PLG activation)
  onboardingCompleted     Boolean  @default(false)
  onboardingCompletedAt   DateTime?
  onboardingSkipped       Boolean  @default(false)
  currentOnboardingStep   String   @default("WELCOME")

  memberships Membership[]
  projects    Project[]
  brandKits   BrandKit[]
  apiKeys     ApiKey[]
  webhooks    Webhook[]
  usageLedger UsageLedger[]
  creditTransactions CreditTransaction[]
  referralsMade   Referral[] @relation("ReferrerOrganization")
  referralsReceived Referral[] @relation("ReferredOrganization")
  npsResponses NPSResponse[]
  feedback     Feedback[]

  @@index([name])
  @@index([tier])
  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

enum Tier {
  FREE      // 60 credits/month
  STARTER   // 150 credits/month ($29/mo)
  PRO       // 300 credits/month ($79/mo)
  BUSINESS  // Custom
  ENTERPRISE // Custom + API access
}

model Membership {
  id    String @id @default(cuid())
  role  Role   @default(EDITOR)
  orgId String
  userId String

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@index([orgId])
  @@index([userId])
}

enum Role {
  OWNER
  EDITOR
  REVIEWER
}

// ============ Projects & Assets ============

model Project {
  id           String   @id @default(cuid())
  orgId        String
  title        String
  sourceUrl    String?
  status       ProjectStatus @default(PENDING)
  clipSettings Json?    // Store clip generation preferences
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Credit system & expiration
  creditsUsed  Int?     // Credits deducted for this project
  expiresAt    DateTime? // Free tier: 2 days, Paid: never

  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  assets      Asset[]
  transcript  Transcript?
  moments     Moment[]
  exports     Export[]

  @@index([orgId])
  @@index([status])
  @@index([expiresAt])
  @@index([createdAt])
  @@index([orgId, status])
  @@index([orgId, createdAt])
}

enum ProjectStatus {
  PENDING
  IMPORTING
  INGESTING
  TRANSCRIBING
  DETECTING
  READY
  FAILED
  ERROR
}

model Asset {
  id        String   @id @default(cuid())
  projectId String
  kind      AssetKind
  url       String
  duration  Float?   // seconds
  mimeType  String?
  size      BigInt?  // bytes
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([kind])
}

enum AssetKind {
  ORIGINAL
  CLIP
  SRT
  VTT
  THUMBNAIL
}

// ============ Transcription & Diarization ============

model Transcript {
  id          String   @id @default(cuid())
  projectId   String   @unique
  externalId  String?  @unique // AssemblyAI transcript ID
  status      String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  language    String   @default("en")
  data        Json     // { words: [{text, start, end, speaker}], segments: [...], wpm, confidence }
  createdAt   DateTime @default(now())
  completedAt DateTime?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([externalId])
  @@index([status])
}

// ============ Moments (Clips) ============

model Moment {
  id             String   @id @default(cuid())
  projectId      String
  tStart         Float    // seconds
  tEnd           Float    // seconds
  duration       Float    // calculated
  title          String
  description    String?
  score          Float    @default(0.0)
  reason         String?  // AI-generated reason for clip selection
  aspectRatio    String   @default("9:16")
  features       Json?    // { hasMusic: bool, hasFace: bool, keywords: [] }
  
  // In-page playback fields
  proxyUrl       String?  // Lightweight preview video (720p)
  thumbnailUrl   String?  // First frame thumbnail
  
  createdAt      DateTime @default(now())

  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  exports Export[]
  @@index([projectId])
  @@index([score])
  @@index([projectId, score])
}

// ============ Brand Kits ============

model BrandKit {
  id            String   @id @default(cuid())
  orgId         String
  name          String
  fonts         Json     // { primary: "font-family", secondary: "font-family", fallback: "sans-serif" }
  colors        Json     // { primary: "#hex", secondary: "#hex", accent: "#hex" }
  logoUrl       String?
  captionStyle  Json     // { position: "bottom", fontSize: 24, emoji: true }
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

// ============ Exports ============

model Export {
  id                    String   @id @default(cuid())
  projectId             String
  momentId              String
  status                ExportStatus @default(PENDING)
  format                ExportFormat @default(MP4)
  template              String?  // template name
  artifacts             Json     // { mp4_url, srt_url, thumbnail_url }
  metrics               Json?    // { views, engagement, retention }
  publishedTo           String[] @default([]) // ["youtube_shorts", "instagram_reels"]
  
  // Video processing fields (for aspect ratio conversion)
  processingStatus      String?  // PENDING, PROCESSING, COMPLETED, FAILED
  processedUrl          String?  // URL to processed video
  processingError       String?  // Error message if failed
  processingStartedAt   DateTime?
  processingCompletedAt DateTime?
  
  // Aspect ratio fields (premium feature)
  aspectRatio           String?  // "9:16", "16:9", "1:1", "4:5", null = original
  cropMode              String?  @default("crop") // "crop", "pad", "smart"
  cropPosition          Json?    // { x, y } or "center", "top", "bottom"
  
  // Caption styling fields (premium feature)
  captionStyle          String?  @default("karaoke") // Caption preset ID
  captionsEnabled       Boolean  @default(true)
  burnCaptions          Boolean  @default(false) // Burn into video vs separate file
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  moment  Moment  @relation(fields: [momentId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([momentId])
  @@index([status])
  @@index([projectId, status])
  @@index([createdAt])
}

enum ExportStatus {
  PENDING
  RENDERING
  COMPLETED
  FAILED
}

enum ExportFormat {
  MP4
  WEBM
  MOV
}

// ============ API Keys & Auth ============

model ApiKey {
  id          String   @id @default(cuid())
  orgId       String
  userId      String
  keyHash     String   @unique // bcrypt hash
  name        String?
  rateLimit   Int      @default(100) // requests per minute
  quotaMinutes Int     @default(10000) // minutes per month
  quotaExports Int     @default(1000) // exports per month
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([userId])
}

// ============ Webhooks ============

model Webhook {
  id       String   @id @default(cuid())
  orgId    String
  userId   String
  url      String
  secret   String   // for HMAC signing
  events   String[] @default(["job.completed", "export.ready"])
  active   Boolean  @default(true)
  createdAt DateTime @default(now())

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

// ============ Usage & Metering ============

model UsageLedger {
  id               String   @id @default(cuid())
  orgId            String
  minutesProcessed Float    @default(0.0)
  exportsCount     Int      @default(0)
  period           String   // "2024-01"
  createdAt        DateTime @default(now())

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([orgId, period])
  @@index([orgId])
}

// ============ Jobs (for async processing) ============

model Job {
  id        String   @id @default(cuid())
  type      JobType
  projectId String
  status    JobStatus @default(PENDING)
  input     Json
  output    Json?
  error     String?
  retries   Int       @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([status])
  @@index([type])
}

enum JobType {
  INGEST
  TRANSCRIBE
  DETECT_HIGHLIGHTS
  RENDER_EXPORT
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

// ============ Credit System (Opus Clip Parity) ============

model CreditTransaction {
  id               String   @id @default(cuid())
  orgId            String
  amount           Int      // Negative for deduction, positive for addition
  balanceBefore    Int      // Credits before transaction
  balanceAfter     Int      // Credits after transaction
  type             CreditTransactionType
  projectId        String?  // If related to a project
  videoDuration    Float?   // Video duration in minutes (for deduction)
  description      String?  // Human-readable description
  metadata         Json?    // Additional context
  createdAt        DateTime @default(now())

  org     Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([type])
  @@index([createdAt])
  @@index([orgId, createdAt])
  @@index([orgId, type])
}

enum CreditTransactionType {
  DEDUCTION_CLIPS          // AI Clips processing
  DEDUCTION_REFRAME        // AI Reframe processing
  DEDUCTION_CAPTIONS       // AI Captions processing
  DEDUCTION_TRIAL_EXPIRED  // Trial expired, credits reverted
  ADDITION_PURCHASE        // Credits purchased
  ADDITION_RENEWAL         // Monthly renewal
  ADDITION_TRIAL           // Trial credits
  ADDITION_REFUND          // Refund for failed processing
  ADDITION_MANUAL          // Admin manual addition
  ADMIN_ADJUSTMENT         // Admin credit adjustment (positive)
  ADMIN_DEDUCTION          // Admin credit deduction (negative)
  ADDITION_REFERRAL_BONUS  // Referral reward credits
}

// ============ Referral System (PLG Growth) ============

model Referral {
  id              String          @id @default(cuid())
  referrerOrgId   String          // Organization that referred
  referredOrgId   String          // Organization that was referred
  referralCode    String          @db.VarChar(10) // Code used for referral
  status          ReferralStatus  @default(PENDING)
  
  // Rewards
  referrerReward  Int             @default(30) // Credits for referrer
  referredReward  Int             @default(30) // Credits for referred user
  referrerRewarded Boolean        @default(false) // Has referrer been rewarded?
  referredRewarded Boolean        @default(false) // Has referred user been rewarded?
  
  // Completion tracking
  completedAt     DateTime?       // When referral was completed (referred user took action)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  referrer        Organization    @relation("ReferrerOrganization", fields: [referrerOrgId], references: [id], onDelete: Cascade)
  referred        Organization    @relation("ReferredOrganization", fields: [referredOrgId], references: [id], onDelete: Cascade)

  @@index([referrerOrgId])
  @@index([referredOrgId])
  @@index([referralCode])
  @@index([status])
  @@index([createdAt])
}

enum ReferralStatus {
  PENDING    // Referred user signed up, but hasn't completed qualifying action
  COMPLETED  // Referred user completed qualifying action (e.g., first export)
  REWARDED   // Both parties have been rewarded
}

// ============ Onboarding System (PLG Activation) ============

model OnboardingProgress {
  id             String    @id @default(cuid())
  userId         String    @unique
  currentStep    String    @default("WELCOME")
  completedSteps String[]  @default([])
  skippedSteps   String[]  @default([])
  isCompleted    Boolean   @default(false)
  completedAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now()) @updatedAt

  // Feature completion tracking (PLG activation)
  hasCreatedClip      Boolean   @default(false)
  hasAddedSubtitles   Boolean   @default(false)
  hasReframedVideo    Boolean   @default(false)
  hasShared           Boolean   @default(false)
  firstClipAt         DateTime?
  firstSubtitleAt     DateTime?
  firstReframeAt      DateTime?
  firstShareAt        DateTime?
  exportCount         Int       @default(0)
  lastExportAt        DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hasCreatedClip])
}

// ============ NPS & Feedback System (PLG Growth) ============

model NPSResponse {
  id          String   @id @default(cuid())
  userId      String
  orgId       String
  score       Int      // 0-10 NPS score
  feedback    String?  @db.Text // Optional feedback text
  category    NPSCategory // Detractor, Passive, Promoter
  context     String?  // Where was the survey shown (dashboard, after_export, etc.)
  createdAt   DateTime @default(now())
  
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([orgId])
  @@index([score])
  @@index([category])
  @@index([createdAt])
}

enum NPSCategory {
  DETRACTOR  // 0-6
  PASSIVE    // 7-8
  PROMOTER   // 9-10
}

model Feedback {
  id          String       @id @default(cuid())
  userId      String
  orgId       String
  type        FeedbackType
  message     String       @db.Text
  rating      Int?         // Optional 1-5 star rating
  page        String?      // Which page was user on
  resolved    Boolean      @default(false)
  resolvedAt  DateTime?
  resolvedBy  String?      // Admin user ID
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([orgId])
  @@index([type])
  @@index([resolved])
  @@index([createdAt])
}

enum FeedbackType {
  BUG
  FEATURE_REQUEST
  IMPROVEMENT
  COMPLAINT
  PRAISE
  OTHER
}

// ============ PLG Content Management (Admin Controlled) ============

model OnboardingContent {
  id          String   @id @default(cuid())
  step        Int      // Step number (1, 2, 3, etc.)
  title       String
  subtitle    String?
  description String   @db.Text
  icon        String?  // Icon name or emoji
  imageUrl    String?  // Optional image
  ctaText     String   @default("Next")
  ctaUrl      String?  // Optional URL for CTA
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isActive])
  @@index([order])
}

model PopupContent {
  id          String      @id @default(cuid())
  name        String      // Internal name for admin
  type        PopupType
  title       String
  subtitle    String?
  content     String      @db.Text
  ctaText     String
  ctaUrl      String?
  imageUrl    String?
  isActive    Boolean     @default(true)
  showAfter   Int?        // Show after X days
  showOnPages String[]    // Which pages to show on
  frequency   String      @default("once") // once, daily, weekly
  priority    Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([isActive])
  @@index([type])
  @@index([priority])
}

enum PopupType {
  WELCOME
  FEATURE_ANNOUNCEMENT
  UPGRADE_NUDGE
  SURVEY
  FEEDBACK
  CUSTOM
}
