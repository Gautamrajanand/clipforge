// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
  // Connection pooling for scalability
  // Prevents database connection exhaustion
  relationMode = "prisma"
}

// ============ Users & Orgs ============

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String?  // hashed (optional for Clerk users)
  clerkId   String?  @unique // Clerk user ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
  apiKeys     ApiKey[]
  webhooks    Webhook[]

  @@index([email])
  @@index([clerkId])
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  tier      Tier     @default(FREE) // Subscription tier
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Credit system (Opus Clip parity)
  credits           Int      @default(60) // Free: 60, Starter: 150, Pro: 300
  creditsResetDate  DateTime @default(now()) // Monthly reset date
  creditsUsedThisMonth Int   @default(0) // Track usage for analytics
  
  // Stripe subscription
  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripePriceId          String? // Current plan price ID
  stripeCurrentPeriodEnd DateTime?
  
  // Trial system
  trialStartDate  DateTime?
  trialEndDate    DateTime?
  trialUsed       Boolean  @default(false)

  memberships Membership[]
  projects    Project[]
  brandKits   BrandKit[]
  apiKeys     ApiKey[]
  webhooks    Webhook[]
  usageLedger UsageLedger[]
  creditTransactions CreditTransaction[]

  @@index([name])
  @@index([tier])
  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

enum Tier {
  FREE      // 60 credits/month
  STARTER   // 150 credits/month ($29/mo)
  PRO       // 300 credits/month ($79/mo)
  BUSINESS  // Custom
  ENTERPRISE // Custom + API access
}

model Membership {
  id    String @id @default(cuid())
  role  Role   @default(EDITOR)
  orgId String
  userId String

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@index([orgId])
  @@index([userId])
}

enum Role {
  OWNER
  EDITOR
  REVIEWER
}

// ============ Projects & Assets ============

model Project {
  id           String   @id @default(cuid())
  orgId        String
  title        String
  sourceUrl    String?
  status       ProjectStatus @default(PENDING)
  clipSettings Json?    // Store clip generation preferences
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Credit system & expiration
  creditsUsed  Int?     // Credits deducted for this project
  expiresAt    DateTime? // Free tier: 2 days, Paid: never

  org         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  assets      Asset[]
  transcript  Transcript?
  moments     Moment[]
  exports     Export[]

  @@index([orgId])
  @@index([status])
  @@index([expiresAt])
}

enum ProjectStatus {
  PENDING
  IMPORTING
  INGESTING
  TRANSCRIBING
  DETECTING
  READY
  FAILED
  ERROR
}

model Asset {
  id        String   @id @default(cuid())
  projectId String
  kind      AssetKind
  url       String
  duration  Float?   // seconds
  mimeType  String?
  size      BigInt?  // bytes
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([kind])
}

enum AssetKind {
  ORIGINAL
  CLIP
  SRT
  VTT
  THUMBNAIL
}

// ============ Transcription & Diarization ============

model Transcript {
  id          String   @id @default(cuid())
  projectId   String   @unique
  externalId  String?  @unique // AssemblyAI transcript ID
  status      String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  language    String   @default("en")
  data        Json     // { words: [{text, start, end, speaker}], segments: [...], wpm, confidence }
  createdAt   DateTime @default(now())
  completedAt DateTime?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([externalId])
  @@index([status])
}

// ============ Moments (Clips) ============

model Moment {
  id             String   @id @default(cuid())
  projectId      String
  tStart         Float    // seconds
  tEnd           Float    // seconds
  duration       Float    // calculated
  title          String
  description    String?
  score          Float    @default(0.0)
  aspectRatio    String   @default("9:16")
  features       Json?    // { hasMusic: bool, hasFace: bool, keywords: [] }
  
  // In-page playback fields
  proxyUrl       String?  // Lightweight preview video (720p)
  thumbnailUrl   String?  // First frame thumbnail
  
  createdAt      DateTime @default(now())

  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  exports Export[]
  @@index([score])
}

// ============ Brand Kits ============

model BrandKit {
  id            String   @id @default(cuid())
  orgId         String
  name          String
  fonts         Json     // { primary: "font-family", secondary: "font-family", fallback: "sans-serif" }
  colors        Json     // { primary: "#hex", secondary: "#hex", accent: "#hex" }
  logoUrl       String?
  captionStyle  Json     // { position: "bottom", fontSize: 24, emoji: true }
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

// ============ Exports ============

model Export {
  id                    String   @id @default(cuid())
  projectId             String
  momentId              String
  status                ExportStatus @default(PENDING)
  format                ExportFormat @default(MP4)
  template              String?  // template name
  artifacts             Json     // { mp4_url, srt_url, thumbnail_url }
  metrics               Json?    // { views, engagement, retention }
  publishedTo           String[] @default([]) // ["youtube_shorts", "instagram_reels"]
  
  // Video processing fields (for aspect ratio conversion)
  processingStatus      String?  // PENDING, PROCESSING, COMPLETED, FAILED
  processedUrl          String?  // URL to processed video
  processingError       String?  // Error message if failed
  processingStartedAt   DateTime?
  processingCompletedAt DateTime?
  
  // Aspect ratio fields (premium feature)
  aspectRatio           String?  // "9:16", "16:9", "1:1", "4:5", null = original
  cropMode              String?  @default("crop") // "crop", "pad", "smart"
  cropPosition          Json?    // { x, y } or "center", "top", "bottom"
  
  // Caption styling fields (premium feature)
  captionStyle          String?  @default("karaoke") // Caption preset ID
  captionsEnabled       Boolean  @default(true)
  burnCaptions          Boolean  @default(false) // Burn into video vs separate file
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  moment  Moment  @relation(fields: [momentId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([momentId])
  @@index([status])
}

enum ExportStatus {
  PENDING
  RENDERING
  COMPLETED
  FAILED
}

enum ExportFormat {
  MP4
  WEBM
  MOV
}

// ============ API Keys & Auth ============

model ApiKey {
  id          String   @id @default(cuid())
  orgId       String
  userId      String
  keyHash     String   @unique // bcrypt hash
  name        String?
  rateLimit   Int      @default(100) // requests per minute
  quotaMinutes Int     @default(10000) // minutes per month
  quotaExports Int     @default(1000) // exports per month
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([userId])
}

// ============ Webhooks ============

model Webhook {
  id       String   @id @default(cuid())
  orgId    String
  userId   String
  url      String
  secret   String   // for HMAC signing
  events   String[] @default(["job.completed", "export.ready"])
  active   Boolean  @default(true)
  createdAt DateTime @default(now())

  org  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

// ============ Usage & Metering ============

model UsageLedger {
  id               String   @id @default(cuid())
  orgId            String
  minutesProcessed Float    @default(0.0)
  exportsCount     Int      @default(0)
  period           String   // "2024-01"
  createdAt        DateTime @default(now())

  org Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([orgId, period])
  @@index([orgId])
}

// ============ Jobs (for async processing) ============

model Job {
  id        String   @id @default(cuid())
  type      JobType
  projectId String
  status    JobStatus @default(PENDING)
  input     Json
  output    Json?
  error     String?
  retries   Int       @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([status])
  @@index([type])
}

enum JobType {
  INGEST
  TRANSCRIBE
  DETECT_HIGHLIGHTS
  RENDER_EXPORT
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

// ============ Credit System (Opus Clip Parity) ============

model CreditTransaction {
  id               String   @id @default(cuid())
  orgId            String
  amount           Int      // Negative for deduction, positive for addition
  balanceBefore    Int      // Credits before transaction
  balanceAfter     Int      // Credits after transaction
  type             CreditTransactionType
  projectId        String?  // If related to a project
  videoDuration    Float?   // Video duration in minutes (for deduction)
  description      String?  // Human-readable description
  metadata         Json?    // Additional context
  createdAt        DateTime @default(now())

  org     Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([type])
  @@index([createdAt])
}

enum CreditTransactionType {
  DEDUCTION_CLIPS     // AI Clips processing
  DEDUCTION_REFRAME   // AI Reframe processing
  DEDUCTION_CAPTIONS  // AI Captions processing
  ADDITION_PURCHASE   // Credits purchased
  ADDITION_RENEWAL    // Monthly renewal
  ADDITION_TRIAL      // Trial credits
  ADDITION_REFUND     // Refund for failed processing
  ADDITION_MANUAL     // Admin manual addition
}
